= render partial: 'items/header', locals: { }

.main-contents
  = image_tag "https://web-jp-assets.mercdn.net/_next/static/images/top-banner-camp-4f3fd88c685e8932d7dde2ad3a8336ba.jpg", class: "back-image"
  .popularity-index
    %h2.index-genre
      人気のカテゴリー
    %div.genre
      %ul.genre__wrapper
        %li.genre__wrapper__list
          = link_to "", class: "genre__wrapper__list__name" do
            レディース
        %li.genre__wrapper__list
          = link_to "", class: "genre__wrapper__list__name" do
            メンズ
        %li.genre__wrapper__list
          = link_to "", class: "genre__wrapper__list__name" do
            家電・スマホ・カメラ
        %li.genre__wrapper__list
          = link_to "", class: "genre__wrapper__list__name" do
            おもちゃ・ホビー・グッズ

  .wrapper
    .items
      .items__genre
        .items__genre__title
          %h3.items__genre__title__text
            レディース新着アイテム
          = link_to category_path(@lady_category), class: "see-more" do
            もっと見る
            =fa_icon 'chevron-right'
        .item-index
          .items
            - @ladies_items.each do |la_item|
              .item
                = link_to item_path(la_item), class: "item-link" do
                  = image_tag "#{la_item.images[0].image}", class:"item__image"
                  %span.item__price
                    = "¥#{la_item.total_price.to_s(:delimited)}"
                  .item__name
                    %span.item__name__text
                      = la_item.name
                -if la_item.buyer_id.present?
                  .items-box_photo__sold
                    .items-box_photo__sold__inner
                      SOLD
        .items__genre__title
          %h3.items__genre__title__text
            メンズ新着アイテム
