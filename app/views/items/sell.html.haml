.single-container
  = render partial: '/shared/single-header', locals: { }

  %main.single-main
    %section.sell-main
      .sell-container
        .sell-container__inner
          %h2.sell-container__inner__title 商品の情報を入力
          %form.sell-form
            .sell-upload
              %h3.sell-upload__head
                出品画像
                %span.form-require 必須
              %p.sell-upload__text 最大10枚までアップロードできます
              .sell-upload__box
                .sell-upload__box__items-nothing
                  .sell-upload-items
                    %ul
                .sell-upload__box__items-have
                  %input.upload-drop-file{multiple: "multiple", name: "image1", style: "display: none;", type: "file"}
                  %pre
                    :preserve
                      ドラッグアンドドロップ
                      またはクリックしてファイルをアップロード
            .sell-content
              .form-group
                %label.form-group__name
                  商品名
                  %span.form-require 必須
                %div
                  %input.input-default{placeholder: "商品名（必須 40文字まで)", value: ""}/
              .form-group-next
                %label.form-group-next__name
                  商品の説明
                  %span.form-require 必須
                %textarea.textarea-default{placeholder: "商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。", rows: "5"}
            .sell-content
              .sell-form-wrapper
                %h3.sell-sub-head 商品の詳細
                .sell-form-box
                  .form-group-first
                    %label.form-group-first__name
                      カテゴリー
                      %span.form-require 必須
                    .select-wrap
                      %select.select-default
                        %option{value: ""} ---
                        %option{value: "1"} レディース
                        %option{value: "2"} メンズ
                        %option{value: "3"} ベビー・キッズ
                        %option{value: "4"} インテリア・住まい・小物
                        %option{value: "5"} 本・音楽・ゲーム
                        %option{value: "1328"} おもちゃ・ホビー・グッズ
                        %option{value: "6"} コスメ・香水・美容
                        %option{value: "7"} 家電・スマホ・カメラ
                        %option{value: "8"} スポーツ・レジャー
                        %option{value: "9"} ハンドメイド
                        %option{value: "1027"} チケット
                        %option{value: "1318"} 自動車・オートバイ
                        %option{value: "10"} その他
                  .form-group-second
                    %label.form-group-second__name
                      商品の状態
                      %span.form-require 必須
                    .select-wrap
                      %select.select-default
                        %option{value: ""} ---
                        %option{value: "1"} 新品、未使用
                        %option{value: "2"} 未使用に近い
                        %option{value: "3"} 目立った傷や汚れなし
                        %option{value: "4"} やや傷や汚れあり
                        %option{value: "5"} 傷や汚れあり
                        %option{value: "6"} 全体的に状態が悪い
            .sell-content
              .sell-form-wrapper
                %h3.sell-sub-head 配送について
                = link_to "/jp/help_center/article/68/", class: "form-question", target: "_blank" do
                  ?
                .sell-form-box
                  .form-group-first
                    %label.form-group-first__name
                      配送料の負担
                      %span.form-require 必須
                    .select-wrap
                      %select.select-default
                        %option{value: ""} ---
                        %option{value: "2"} 送料込み(出品者負担)
                        %option{value: "1"} 着払い(購入者負担)
                  .form-group-second
                    %label.form-group-second__name
                      発送元の地域
                      %span.form-require 必須
                    .select-wrap
                      %select.select-default
                        %option{value: ""} ---
                        %option{value: "1"} 北海道
                        %option{value: "2"} 青森県
                        %option{value: "3"} 岩手県
                        %option{value: "4"} 宮城県
                        %option{value: "5"} 秋田県
                        %option{value: "6"} 山形県
                        %option{value: "7"} 福島県
                        %option{value: "8"} 茨城県
                        %option{value: "9"} 栃木県
                        %option{value: "10"} 群馬県
                        %option{value: "11"} 埼玉県
                        %option{value: "12"} 千葉県
                        %option{value: "13"} 東京都
                        %option{value: "14"} 神奈川県
                        %option{value: "15"} 新潟県
                        %option{value: "16"} 富山県
                        %option{value: "17"} 石川県
                        %option{value: "18"} 福井県
                        %option{value: "19"} 山梨県
                        %option{value: "20"} 長野県
                        %option{value: "21"} 岐阜県
                        %option{value: "22"} 静岡県
                        %option{value: "23"} 愛知県
                        %option{value: "24"} 三重県
                        %option{value: "25"} 滋賀県
                        %option{value: "26"} 京都府
                        %option{value: "27"} 大阪府
                        %option{value: "28"} 兵庫県
                        %option{value: "29"} 奈良県
                        %option{value: "30"} 和歌山県
                        %option{value: "31"} 鳥取県
                        %option{value: "32"} 島根県
                        %option{value: "33"} 岡山県
                        %option{value: "34"} 広島県
                        %option{value: "35"} 山口県
                        %option{value: "36"} 徳島県
                        %option{value: "37"} 香川県
                        %option{value: "38"} 愛媛県
                        %option{value: "39"} 高知県
                        %option{value: "40"} 福岡県
                        %option{value: "41"} 佐賀県
                        %option{value: "42"} 長崎県
                        %option{value: "43"} 熊本県
                        %option{value: "44"} 大分県
                        %option{value: "45"} 宮崎県
                        %option{value: "46"} 鹿児島県
                        %option{value: "47"} 沖縄県
                        %option{value: "99"} 未定
                  .form-group-second
                    %label.form-group-second__name
                      発送までの日数
                      %span.form-require 必須
                    .select-wrap
                      %select.select-default
                        %option{value: ""} ---
                        %option{value: "1"} 1~2日で発送
                        %option{value: "2"} 2~3日で発送
                        %option{value: "3"} 4~7日で発送
            .sell-content
              .sell-form-wrapper
                %h3.sell-sub-head 販売価格(300〜9,999,999)
                = link_to "/jp/help_center/article/64/", class: "form-question", target: "_blank" do
                  ?
                .sell-form-box
                  .sell-form-box__top
                    %label.sell-form-box-left
                      価格
                      %span.form-require 必須
                    .sell-form-box-right
                      ¥
                      .input-wrapper
                        %input.input-default{placeholder: "例）300", value: ""}/
                  .sell-form-box__middle
                    .sell-form-box-left
                      販売手数料 (10%)
                    .sell-form-box-right -
                  .sell-form-box__bottom
                    .sell-form-box-left 販売利益
                    .sell-form-box-right -
            .modal{role: "dialog", tabindex: "-1"}
              .modal-inner
            .sell-content.sell-btn-box
              %div
                %p.text
                  = link_to "/jp/help_center/getting_started/prohibited_items/", target: "_blank" do
                    禁止されている出品
                  、
                  = link_to "/jp/help_center/getting_started/prohibited_conduct/", target: "_blank" do
                    行為
                  を必ずご確認ください。
                %p.text
                  またブランド品でシリアルナンバー等がある場合はご記載ください。
                  = link_to "/jp/help_center/getting_started/counterfeit_goods/", target: "_blank" do
                    偽ブランドの販売
                  は犯罪であり処罰される可能性があります。
                %p.text
                  また、出品をもちまして
                  = link_to "/jp/seller_terms/", target: "_blank" do
                    加盟店規約
                  に同意したことになります。
              %button.red-button{type: "submit"}
                出品する
              = link_to "", class: "gray-button" do
                もどる

  = render partial: '/shared/single-footer', locals: { }
