.single-contener
  .single-header
    .single-header__contents
      = link_to "https://www.mercari.com/jp/", class: "header-icon-link" do
        = image_tag "https://www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?2296184308", alt: "mercari", class: "header-icon"
  .single-main
    .buy-main
      %h2.buy-main__title
        購入内容の確認
      .buy-content
        .buy-content__inner
          .buy-content__inner__top
            .buy-item-image
              = image_tag "https://static.mercdn.net/thumb/photos/m98240264700_1.jpg?1570098506", class: "buy-item-image__src"
            .buy-item-name
              COACH コーチ ショルダーバッグ
          .form
            .buy-item-price
              ¥3,480
              %span.postage
                送料込み
            %ul.point-use
              %li
                .point-comment
                  ポイントはありません
            %ul
              %li.li
                %div
                  支払金額
                %div
                  %span
                    ¥3,480
            = button_tag "購入する", class: "buy-button"
      .buy-content.buy-user-info
        .buy-content__inner
          %h3.buy-content__inner__index
            配送先
          %address.buy-user-info-text
            〒000-0000
            %br/
            東京都渋谷区○○○○○○○○○○○○
            %br/
            メル・カリー
          %p.buy-user-info-text
          = link_to "", class: "buy-user-info-fix" do
            .change
              変更する
              =fa_icon 'chevron-right'
      .buy-content.buy-user-info.bottom
        .buy-content__inner
          %h3.buy-content__inner__index
            支払方法
          %p.buy-user-info-text
            ***********0000
            %br/
            00/00
            %br/
            = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?2296184308", class: "card-icon"
          = link_to "", class: "buy-user-info-fix" do
            .change
              変更する
              =fa_icon 'chevron-right'
  .single-footer
    %nav
      %ul
        %li
          = link_to "https://www.mercari.com/jp/privacy/", class: "footer-link" do
            プライバシーポリシー
        %li
          = link_to "https://www.mercari.com/jp/tos/", class: "footer-link" do
            メルカリ利用規約
        %li
          = link_to "https://www.mercari.com/jp/tokutei/", class: "footer-link" do
            特定商取引に関する表記
    = link_to "https://www.mercari.com/jp/", class: "single-footer__link" do
      = image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?3466462615", class: "single-footer__link__logo"
    %p.copyright__text
      © 2019 Mercari

