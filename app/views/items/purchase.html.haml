.single-container
  = render partial: '/shared/single-header', locals: { }
  .single-main
    .buy-main
      %h2.buy-main__title
        購入内容の確認
      .buy-content
        .buy-content__inner
          .buy-content__inner__top
            .buy-item-image
              = image_tag "#{@item.images[0].image}", class: "buy-item-image__src"
            .buy-item-name
              = @item.name
          .form
            .buy-item-price
              = "¥#{@total_price}"
              %span.postage
                送料込み
            %ul.point-use
              %li
                .point-comment
                  ポイントはありません
            %ul
              %li.li
                %div
                  支払金額
                %div
                  %span
                    = "¥#{@total_price}"
            = form_tag(action: :pay, method: :post) do
              %script.payjp-button{src: "https://checkout.pay.jp", type:"text/javascript", class:"buy-button", "data-text": "購入する", "data-key": "pk_test_7b8ecbd36e6ecb8a4f74d7fa"}
      .buy-content.buy-user-info
        .buy-content__inner
          %h3.buy-content__inner__index
            配送先
          %address.buy-user-info-text
            = "〒#{@item.seller.postal_code}"
            %br/
            = @item.seller.prefectures
            %span
            = @item.seller.city
            %span
            = @item.seller.address
            %span
            = @item.seller.building_name
            %br/
            = @item.seller.family_name
            %span
            = @item.seller.last_name
          %p.buy-user-info-text
          = link_to "", class: "buy-user-info-fix" do
            .change
              変更する
              %span ＞
      .buy-content.buy-user-info.bottom
        .buy-content__inner
          %h3.buy-content__inner__index
            支払方法
          %p.buy-user-info-text
            ***********4242
            %br/
            10/22
            %br/
            = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?2296184308", class: "card-icon"
          = link_to "", class: "buy-user-info-fix" do
            .change
              変更する
              %span ＞
  = render partial: '/shared/single-footer', locals: { }


