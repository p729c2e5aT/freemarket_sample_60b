.single-container
  = render partial: '/shared/single-header', locals: { }
  .single-main
    .buy-main
      %h2.buy-main__title
        購入内容の確認
      .buy-content
        .buy-content__inner
          .buy-content__inner__top
            .buy-item-image
              = image_tag "https://static.mercdn.net/thumb/photos/m98240264700_1.jpg?1570098506", class: "buy-item-image__src"
            .buy-item-name
              COACH コーチ ショルダーバッグ
          .form
            .buy-item-price
              ¥3,480
              %span.postage
                送料込み
            %ul.point-use
              %li
                .point-comment
                  ポイントはありません
            %ul
              %li.li
                %div
                  支払金額
                %div
                  %span
                    ¥3,480
            = form_tag(action: :pay, method: :post) do
              %script.payjp-button{src: "https://checkout.pay.jp", type:"text/javascript", "data-text": "購入する", "data-key": "pk_test_7b8ecbd36e6ecb8a4f74d7fa"}
      .buy-content.buy-user-info
        .buy-content__inner
          %h3.buy-content__inner__index
            配送先
          %address.buy-user-info-text
            〒000-0000
            %br/
            東京都渋谷区○○○○○○○○○○○○
            %br/
            メル・カリー
          %p.buy-user-info-text
          = link_to "", class: "buy-user-info-fix" do
            .change
              変更する
              %span ＞
            -# =fa_icon 'chevron-right', class: "change-icon"
      .buy-content.buy-user-info.bottom
        .buy-content__inner
          %h3.buy-content__inner__index
            支払方法
          %p.buy-user-info-text
            ***********0000
            %br/
            00/00
            %br/
            = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?2296184308", class: "card-icon"
          = link_to "", class: "buy-user-info-fix" do
            .change
              変更する
              %span ＞
            -# =fa_icon 'chevron-right', class: "change-icon"
  = render partial: '/shared/single-footer', locals: { }


