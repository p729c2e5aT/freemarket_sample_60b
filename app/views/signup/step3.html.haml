.sign_up_bpdy
  .signup-content
    %header.signup-header
      %h1
        =image_tag "mercari-logo.svg", size:"200x50"
      %nav.progress-bar.signup-bar
        %ol
          %li.active
            会員情報
            .progress-status-red
              .red-border
          %li.active
            電話番号認証
            .progress-status-red
          %li.active
            お届け先住所入力
            .progress-status-red
              .border
          %li
            支払い方法
            .progress-status
          %li
            完了
            .progress-status
    -# = render partial: 'signup/sign_up_header', locals: { signup: @signup }
    .single-main
      .l-signup
        %h2.signup-head 住所入力
        .l-signup-inner
          = form_for @user, url: step4_signup_index_path, method: :get, html: {class: 'f-content'} do |f|
            -# .form-list
            -#   %div
            -#     %label お名前
            -#     %span.form-require 必須
            -#   = f.text_field :family_name, placeholder: '例) 山田' ,class: "login-input-text input-default"
            -#   = f.text_field :last_name, placeholder: '例) 彩' ,class: "login-input-text input-default"
            -# .form-list
            -#   %div
            -#     %label お名前カナ
            -#     %span.form-require 必須
            -#   = f.text_field :family_name_kana, placeholder: '例) ヤマダ' ,class: "login-input-text input-default"
            -#   = f.text_field :last_name_kana, placeholder: '例) アヤ' ,class: "login-input-text input-default"
            .form-list
              %div
                %label 郵便番号
                %span.form-require 必須
              = f.text_field :postal_code, placeholder: '例) 123-4567' ,class: "login-input-text input-default"
            .form-list
              %div
                %label 都道府県
                %span.form-require 必須
              = f.text_field :prefectures, placeholder: '都道府県' ,class: "login-input-text input-default"
            .form-list
              %div
                %label 市区町村
                %span.form-require 必須
              = f.text_field :city, placeholder: '例） 横浜市緑区' ,class: "login-input-text input-default"
            .form-list
              %div
                %label 番地
                %span.form-require 必須
              = f.text_field :address, placeholder: '例）青山1-1-1' ,class: "login-input-text input-default"
            .form-list
              %div
                %label 建物名
                %span.form-require2 任意
              = f.text_field :building_name, placeholder: '例) 柳ビル103' ,class: "login-input-text input-default"
            .form-list
              %div
                %label 電話
                %span.form-require2 任意
              = f.text_field :phone_number2, placeholder: '例）09012345678' ,class: "login-input-text input-default"
            %p
              =link_to signup_index_path, method: :post do
                次へ進む
    = render partial: 'signup/sign_up_footer', locals: { signup: @signup }
