.sign_up_body4
  .signup-content
    %header.signup-header
      %h1
        =link_to image_tag("mercari-logo.svg", size:"200x50"), root_path
      %nav.progress-bar.signup-bar
        %ol
          %li
            会員情報
            .progress-status-red
              .red-border
          %li
            電話番号認証
            .progress-status-red
          %li
            お届け先住所入力
            .progress-status-red
          %li
            支払い方法
            .progress-status-red
          %li.active
            完了
            .progress-status-red
    .card_body
      .card-content
        .card-main
          .l-card-content
            %h2.card-head 支払い方法
            .l-card-inner
              = form_tag(pay_card_index_path, method: :post, id: 'charge-form',  name: "inputForm") do
                .l-card-content
                  .form-list
                    %label カード番号
                    %span 必須
                    = text_field_tag "number", "", class: "input-list", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
                    -# %input.input-list{placeholder: :半角数字のみ, value: ""}/
                    = image_tag "cureka.png" , size:"300x22"
                  .form-list
                    %label{for: :payment_card_expire} 有効期限
                    %span.form-require 必須
                    %div
                      .list-1
                        %select.select-default.3-1#exp_month{name: "exp_month", type: "text"}
                          %option{value: "01"} 01
                          %option{value: "02"} 02
                          %option{value: "03"} 03
                          %option{value: "04"} 04
                          %option{value: "05"} 05
                          %option{value: "06"} 06
                          %option{value: "07"} 07
                          %option{value: "08"} 08
                          %option{value: "09"} 09
                          %option{value: "10"} 10
                          %option{value: "11"} 11
                          %option{value: "12"} 12
                        .limit 月
                      .list-1
                        %select.select-default.3-1#exp_year{name: "exp_year", type: "text"}
                          %option{value: "2019"} 19
                          %option{value: "2020"} 20
                          %option{value: "2021"} 21
                          %option{value: "2022"} 22
                          %option{value: "2023"} 23
                          %option{value: "2024"} 24
                          %option{value: "2025"} 25
                          %option{value: "2026"} 26
                          %option{value: "2027"} 27
                          %option{value: "2028"} 28
                          %option{value: "2029"} 29
                        .limit 年
                      %ul#expire-mm-error-wrapper.has-error-text
                      %ul#expire-yy-error-wrapper.has-error-text
                  .form-list
                    %ul#security-code-error-wrapper.has-error-text
                  %input#user_id{name: :user_id, type: :hidden, value: ""}/
                  %input#encrypted_card_data{name: :encrypted_card_data, type: :hidden}/
                  %p#primary-error.has-error-text
                  .form-list
                    %label セキュリティコード
                    %span 必須
                    = text_field_tag "cvc", "", class: "input-list", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
                    -# %input.input-list{placeholder: :カード背面4桁もしくは3桁の番号, value: ""}/
                    .card-seqcode
                      %p.card-seqcode-text
                        %span.form-question ?
                        カード裏面の番号とは？
                      #card_token
                      = link_to  finish_signup_index_path , class: "btn-red" do
                        = submit_tag "追加する", id: "token_submit" 
    = render partial: 'signup/sign_up_footer', locals: { signup: @signup }
