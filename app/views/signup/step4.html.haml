.sign_up_body4
  .signup-content
    %header.signup-header
      %h1
        =image_tag "mercari-logo.svg", size:"200x50"
      %nav.progress-bar.signup-bar
        %ol
          %li
            会員情報
            .progress-status-red
              .red-border
          %li
            電話番号認証
            .progress-status-red
          %li
            お届け先住所入力
            .progress-status-red
          %li.active
            支払い方法
            .progress-status-red
              .border-4
          %li
            完了
            .progress-status
    .signup-main
      .l-signup-content
        %h2.signup-head 支払い方法
        .l-signup-inner
          .l-signup-content
            .form-list
              %label カード番号
              %span 必須
              %input.input-list{placeholder: :半角数字のみ, value: ""}/
              = image_tag "cureka.png" , size:"300x22"
            .form-list
              %label{for: :payment_card_expire} 有効期限
              %span.form-require 必須
              %div
                .list-1
                  %select.select-default.3-1
                    %option{value: "01"} 01
                    %option{value: "02"} 02
                    %option{value: "03"} 03
                    %option{value: "04"} 04
                    %option{value: "05"} 05
                    %option{value: "06"} 06
                    %option{value: "07"} 07
                    %option{value: "08"} 08
                    %option{value: "09"} 09
                    %option{value: "10"} 10
                    %option{value: "11"} 11
                    %option{value: "12"} 12
                  .limit 月
                .list-1
                  %select.select-default.3-1
                    %option{value: "19"} 19
                    %option{value: "20"} 20
                    %option{value: "21"} 21
                    %option{value: "22"} 22
                    %option{value: "23"} 23
                    %option{value: "24"} 24
                    %option{value: "25"} 25
                    %option{value: "26"} 26
                    %option{value: "27"} 27
                    %option{value: "28"} 28
                    %option{value: "29"} 29
                  .limit 年
                %ul#expire-mm-error-wrapper.has-error-text
                %ul#expire-yy-error-wrapper.has-error-text
            .form-list
              %ul#security-code-error-wrapper.has-error-text
            %input#user_id{name: :user_id, type: :hidden, value: ""}/
            %input#encrypted_card_data{name: :encrypted_card_data, type: :hidden}/
            %p#primary-error.has-error-text
            .form-list
              %label セキュリティコード
              %span 必須
              %input.input-list{placeholder: :カード背面4桁もしくは3桁の番号, value: ""}/
              .signup-seqcode
                %p.signup-seqcode-text
                  %span.form-question ?
                  カード裏面の番号とは？
                %button.btn-red{type: "submit"} 次へ進む
  = render partial: 'signup/sign_up_footer', locals: { signup: @signup }




