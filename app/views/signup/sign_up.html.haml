.sign_up_body
  .sign_up_content
    = render partial: 'signup/sign_up_header', locals: { signup: @signup }
    .sign_up_main
      .l-signup-content
        %h2.signup-head 新規会員登録
        .signup-inner
          .l-signup-content
            = link_to names_signup_index_path, class: "btn-list btn-mail" do
              = image_tag "mail.svg"
              メールアドレスで登録する
            = link_to user_facebook_omniauth_authorize_path, method: :post, class: "btn-list btn-signup-facebook"  do
              = image_tag "facebook-logo.svg"
              Facebookで登録する
            = link_to user_google_oauth2_omniauth_authorize_path, method: :post, class: "btn-list btn-signup-google"  do
              = image_tag "google.logo.jpg"
              Googleで登録する
    = render partial: 'signup/sign_up_footer', locals: { signup: @signup }
